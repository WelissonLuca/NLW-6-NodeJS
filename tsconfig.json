{
  "compilerOptions": {
    "target": "ES2020",                                
    "module": "commonjs",                           
    "baseUrl": "./src",  
    "typeRoots": ["./src/@types"],
    "outDir":"./dist",                           
    "paths": {
      "@modules/*":["modules/*"],
      "@config/*":["config/*"],
      "@shared/*":["shared/*"],
      "@errors/*":["errors/*"],
      "@utils/*":["utils/*"]
    },                                 
    "esModuleInterop": true,                        
    "experimentalDecorators": true,              
    "emitDecoratorMetadata": true,               
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true,        
    "resolveJsonModule": true
  }
}
